@model List<rentroute1.Models.AdminCars>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - RentRoutes</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: 'Arial', sans-serif;
            background-color: #212529; /* Dark background */
            color: #ffffff; /* White text for contrast */
            overflow-x: hidden; /* Prevent horizontal scrolling */
        }

        .navbar {
            margin-bottom: 0;
            border-radius: 0;
        }

        .hero {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            background: linear-gradient(to right, #343a40, #212529); /* Dark gradient */
            color: #ffffff;
            padding: 0;
            margin: 0; /* Remove any margin */
            width: 100%; /* Full width */
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: bold;
            }

            .hero p {
                font-size: 1.2rem;
                margin: 20px 0;
            }

            .hero a {
                background-color: #f8d568; /* Accent color from the logo */
                color: #343a40;
                padding: 10px 20px;
                font-size: 1rem;
                text-decoration: none;
                border-radius: 5px;
                transition: background 0.3s;
            }

                .hero a:hover {
                    background-color: #d4af37; /* Hover color */
                }

        .container {
            padding: 20px;
            max-width: 100%;
        }

        h2 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 30px;
            color: #f8d568;
        }

        .table {
            margin-top: 20px;
            background-color: #343a40; /* Table background matching theme */
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
        }

            .table th,
            .table td {
                color: #ffffff;
            }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            color: #fff;
            margin-bottom: 20px;
            font-weight: bold;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .btn-warning {
            background-color: #f8d568;
            border-color: #f8d568;
            color: #343a40;
            font-weight: bold;
        }

            .btn-warning:hover {
                background-color: #d4af37;
                border-color: #d4af37;
            }

        footer {
            background-color: #343a40;
            color: #ffffff;
            text-align: center;
            padding: 20px;
            margin: 0; /* Remove footer margins */
            width: 100%; /* Full width */
        }
    </style>
</head>

<body>
   
    <!-- Admin Dashboard Content -->
    <div class="container">
        <a asp-action="AddCars" class="btn btn-success">Add Cars</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Details</th>
                    <th>Model Type</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr>
                        <td>@car.Title</td>
                        <td><img src="data:image/png;base64,@car.ImageData" width="100" /></td>
                        <td>@car.Details</td>
                        <td>@car.ModelType</td>
                        <td>@car.Price</td>
                        <td>@(car.IsActive ? "Active" : "Inactive")</td>
                        <td>
                            <form asp-action="ToggleActiveStatus" method="post">
                                <input type="hidden" name="id" value="@car.Id" />
                                <button type="submit" class="btn btn-warning">
                                    @(car.IsActive ? "Deactivate" : "Activate")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
