@model rentroute1.Models.AdminCars

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Car - RentRoutes</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: 'Arial', sans-serif;
            background-color: #212529; 
            color: #ffffff; 
            overflow-x: hidden; 
        }

        .navbar {
            margin-bottom: 0;
            border-radius: 0;
        }

        .hero {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            background: linear-gradient(to right, #343a40, #212529); 
            color: #ffffff;
            padding: 0;
            margin: 0; /* Remove any margin */
            width: 100%; /* Full width */
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: bold;
            }

            .hero p {
                font-size: 1.2rem;
                margin: 20px 0;
            }

            .hero a {
                background-color: #f8d568; 
                color: #343a40;
                padding: 10px 20px;
                font-size: 1rem;
                text-decoration: none;
                border-radius: 5px;
                transition: background 0.3s;
            }

                .hero a:hover {
                    background-color: #d4af37;
                }

        .section {
            padding: 20px 0;
            margin: 0; 
            width: 100%; 
        }

        .section-title {
            font-size: 2rem;
            text-align: center;
            margin-bottom: 20px;
            color: #f8d568;
        }

        .form-container {
            background-color: #343a40;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
            max-width: 700px;
            margin: 20px auto;
        }

            .form-container label {
                font-size: 1rem;
                color: #f8d568;
                margin-bottom: 5px;
            }

            .form-container input,
            .form-container textarea,
            .form-container select {
                background-color: #495057;
                border: none;
                border-radius: 5px;
                color: white;
                padding: 10px;
                margin-bottom: 15px;
                width: 100%;
                font-size: 1rem;
            }

            .form-container button {
                background-color: #f8d568;
                border: none;
                color: #343a40;
                padding: 10px 20px;
                font-size: 1.1rem;
                border-radius: 5px;
                width: 100%;
                transition: background-color 0.3s;
            }

                .form-container button:hover {
                    background-color: #d4af37;
                }

        footer {
            background-color: #343a40;
            color: #ffffff;
            text-align: center;
            padding: 20px;
            margin: 0;
            width: 100%; 
        }
    </style>
</head>

<body>
    

    <!-- Form Section -->
    <section class="section">
        <div class="form-container">
            <form asp-action="AddCars" method="post" enctype="multipart/form-data">
                <label for="Title">Title</label>
                <input type="text" asp-for="Title" id="Title" class="form-control" required />

                <label for="imageFile">Image</label>
                <input type="file" name="imageFile" id="imageFile" class="form-control" required />

                <label for="Details">Details</label>
                <textarea asp-for="Details" id="Details" class="form-control" required></textarea>

                <label for="ModelType">Model Type</label>
                <select asp-for="ModelType" id="ModelType" class="form-control">
                    <option value="SUV">SUV</option>
                    <option value="HATCHBACK">Hatchback</option>
                    <option value="LUXURY">Luxury</option>
                </select>

                <label for="Price">Price</label>
                <input type="number" asp-for="Price" id="Price" class="form-control" step="0.01" required />

                <button type="submit" class="btn btn-primary">Add Car</button>
            </form>
        </div>
    </section>

    

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
