@{
    ViewData["Title"] = "User Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login - RentRoutes</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: 'Arial', sans-serif;
            background-color: #212529; 
            color: #ffffff; 
            overflow-x: hidden;
        }

        .container-fluid {
            margin: 0; 
            padding: 0; 
            width: 100%; 
        }

        .login-container {
            height: 100vh; 
            display: flex;
            justify-content: center; 
            align-items: center; 
            background: linear-gradient(to right, #343a40, #212529); 
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            background-color: #343a40;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
        }

            .login-card h2 {
                text-align: center;
                margin-bottom: 20px;
                font-size: 1.8rem;
                color: #f8d568; 
            }

        .form-group label {
            font-size: 1rem;
            color: #f8d568;
        }

        .form-control {
            background-color: #212529;
            color: #ffffff;
            border: 1px solid #f8d568;
            border-radius: 5px;
            padding: 10px;
        }

            .form-control:focus {
                border-color: #d4af37;
                box-shadow: 0 0 5px rgba(212, 175, 55, 0.8);
            }

        .btn-primary {
            background-color: #f8d568;
            border: none;
            color: #343a40;
            font-weight: bold;
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #d4af37;
            }

        .alert {
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <section class="login-container">
        <div class="login-card">
            <h2>User Login</h2>

            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                <ul>
                        <a class="nav-link" asp-controller="Admin" asp-action="Login" style="text-align:center;">Admin Login</a>
                   
                </ul>
                
            </form>
            
            
            @if (TempData["LoginError"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["LoginError"]
                </div>
            }
            
            @if (TempData["LoginError"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["LoginError"]
                </div>
            }
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
