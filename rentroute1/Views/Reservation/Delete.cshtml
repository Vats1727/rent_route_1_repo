@model rentroute1.Models.Reservation

<h2>Delete Reservation</h2>

<p>Are you sure you want to delete this reservation?</p>

<div>
    <p><strong>Pickup Location:</strong> @Model.PickupLocation</p>
    <p><strong>Pickup Date:</strong> @Model.PickupDate.ToShortDateString()</p>
    <p><strong>Drop Date:</strong> @Model.DropDate.ToShortDateString()</p>
</div>

<form asp-controller="Reservation" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
