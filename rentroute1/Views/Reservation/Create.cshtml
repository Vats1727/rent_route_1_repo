@model rentroute1.Models.Reservation

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Reservation - RentRoutes</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: 'Arial', sans-serif;
            background-color: #212529;
            color: #ffffff;
            overflow-x: hidden;
        }

        .section {
            padding: 20px;
            margin: 0;
            width: 100%;
        }

        .section-title {
            font-size: 2rem;
            text-align: center;
            margin-bottom: 20px;
            color: #f8d568;
        }

        .form-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #343a40;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
        }

        .form-label {
            color: #f8d568;
            font-weight: bold;
        }

        .form-control {
            background-color: #212529;
            color: #ffffff;
            border: 1px solid #f8d568;
            border-radius: 5px;
        }

            .form-control:focus {
                box-shadow: 0 0 5px #f8d568;
                border-color: #f8d568;
            }

        .btn-primary {
            background-color: #f8d568;
            border: none;
            color: #343a40;
            font-weight: bold;
            margin-top: 20px;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #d4af37;
            }

        .message {
            text-align: center;
            margin-top: 20px;
            font-size: 1.2rem;
            color: #28a745;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <section class="section">
        <h2 class="section-title">Create Reservation</h2>
        <div class="form-container">
            @if (ViewData["Message"] != null)
            {
                <div class="message">@ViewData["Message"]</div>
            }
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="PickupLocation" class="form-label"></label>
                    <input asp-for="PickupLocation" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="PickupDate" class="form-label"></label>
                    <input asp-for="PickupDate" type="date" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="PickupTime" class="form-label"></label>
                    <input asp-for="PickupTime" type="time" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="DropDate" class="form-label"></label>
                    <input asp-for="DropDate" type="date" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="DropTime" class="form-label"></label>
                    <input asp-for="DropTime" type="time" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </section>
</body>

</html>
